{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Task Manager",
  "version": "0.1.0",
  "identifier": "com.gabs.task-manager",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3001",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Task Manager",
        "width": 1200,
        "height": 800,
        "minHeight": 800,
        "minWidth": 1200,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "GabrielSantos23",
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDcwNDQ2ODc3MUJFNzcyMkUKUldRdWN1Y2JkMmhFY0tldnUzM3pSdjhFQS9rWFR1MkdweUF3c3NzbGYxTis5dHFpNW5CWk9Pc3YK",
      "endpoints": [
        "https://github.com/GabrielSantos23/task-manager/releases/latest/download/latest.json"
      ]
    }
  }
}
